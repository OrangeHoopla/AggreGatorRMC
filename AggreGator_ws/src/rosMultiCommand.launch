<?xml version="1.0"?>
<!--xml file for roslaunch
	roslaunch will navigate through xml file launching all nodes automatically
	This file is for the command computer
-->

<launch>
	
	<!--Joy nodes-->
	<node name="joy_node" pkg="joy" type="joy_node" output="screen"/>
	<!--Joy parameters-->

	<!--Remote Control nodes-->
	<node name="remote_control_node" pkg="remote_control" type="xbox_controller_node" output="screen" />
	<!--Remote Control Paramaters-->
	<param name="remote_control/send_freq" value="10"/>
	<param name="remote_control/xbox_controller/mapping" value="2"/>
	<param name="remote_control/bucket_gear" value="0.125"/>
	<param name="remote_control/sim" value="false"/>
	
	
	<!--
	For quick command line input:
	

rosrun image_rotate image_rotate image:=/usb_cam/image_raw __name:=image_rotater _image_transport:=theora

rosrun image_view image_view image:=rotated/image _image_transport:=theora	
	-->

	<node name="image_rotate" pkg="image_rotate" type="image_rotate" args="image:=/usb_cam/image_raw __name:=image_rotater _image_transport:=theora"/>

	<!--Image Rotate Parameters-->
	<param name="image_rotate/target_frame_id" value=""/>
	<param name="image_rotate/source_frame_id" value=""/>
	<param name="image_rotate/target_x" value="-7.0"/>
	<param name="image_rotate/target_y" value="-7.0"/>
	<param name="image_rotate/source_x" value="-10.0"/>
	<param name="image_rotate/source_y" value="10.0"/>
	<param name="image_rotate/output_image_size" value="0.0"/>

	<!--node name="image_view" pkg="image_view" type="image_view" args="image:=rotated/image"/-->


	<!--Power Monitering nodes-->
	<node name="power_monitoring_node" pkg="power_monitoring" type="power_monitoring_node" output="screen" cwd="node"/>
</launch>

