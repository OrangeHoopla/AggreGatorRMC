<?xml version="1.0"?>
<!--xml file for roslaunch
	roslaunch will navigate through xml file launching all nodes automatically
	This will launch nodes meant to run on the O-Droid
-->

<launch>
	<!--Hardware Interface nodes-->
	<node name="i2c_node"      pkg="hardware_interface" type="i2c_node"/>
	<node name="adafruit_node" pkg="hardware_interface" type="adafruit_node"/>
	<node name="ina226_node"   pkg="hardware_interface" type="ina226_node"/>
	
	<!--LADAR Nodes-->
	<!--<node name="urg_node" pkg="urg" type="?"/>-->
	<!--node name="ladar_node" pkg="ladar" type="ladar_node"/-->
	
	<!--Motor Controller nodes-->
	<node name="bucket_motor_node" pkg="motor_controller" type="bucket_motor_node"/>
	<node name="linear_actuator_node" pkg="motor_controller" type="linear_actuator_node"/>
	<node name="wheel_motor_node" pkg="motor_controller" type="wheel_motor_node"/>
		
	<!--USB Camera Parameters-->
	<param name="usb_cam/framerate" value="10"/>	


	<!--Image Rotate Parameters>
	<param name="image_rotater/target_frame_id" value=""/>
	<param name="image_rotater/source_frame_id" value=""/>
	<param name="image_rotater/target_x" value="-7.0"/>
	<param name="image_rotater/target_y" value="-7.0"/>
	<param name="image_rotater/source_x" value="-10.0"/>
	<param name="image_rotater/source_y" value="10.0"/>
	<param name="image_rotater/output_image_size" value="0.0"/-->

	<!--USB Camera-->
	<node name="usb_cam" pkg="usb_cam" type="usb_cam_node" args="_image_transport:=theora"/>
	<!--node name="image_rotate" pkg="image_rotate" type="image_rotate" args="image:=/usb_cam/image_raw \rotated/image:=rotated __name:=image_rotater _image_transport:=compressed"/-->


	<param name="usb_cam/image_raw/theora/quality" value="20.0"/>
	<param name="usb_cam/image_raw/theora/target_bitrate" value="1000.0"/>
	<!--<param name="usb_cam/image_width" value="400.0"/>
	<param name="usb_cam/image_height" value="225.0"/>-->
	
</launch>

